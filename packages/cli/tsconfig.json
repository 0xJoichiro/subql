{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "lib",
    "paths": {
      "@subql/common": ["../common/src"],
      "@subql/common/*": ["../common/src/*"],
      "@subql/types": ["../types/src"],
      "@subql/types/*": ["../types/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
